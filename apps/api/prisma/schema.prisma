// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Cetegory {
  Konser
  Pertandingan
  Cosplay
  Pameran
}

enum Status {
  Pending
  Waiting
  Paid
  Declined
}

model User {
  id          Int           @unique @default(autoincrement())
  username    String        @unique
  email       String        @unique
  password    String
  firstName   String
  lastName    String
  phone       String        @unique @default("")
  referal     String        @unique @default("")
  point       Int           @default(0)
  avatar      String?
  isVerified  Boolean       @default(false)
  Transaction Transaction[]
  Review      Review[]
}

model EO {
  id         Int      @unique @default(autoincrement())
  username   String   @unique
  email      String   @unique
  password   String
  firstName  String
  lastName   String
  phone      String   @unique
  avatar     String?
  isVerified Boolean  @default(false)
  Events     Events[]
}

model Review {
  id       Int    @unique @default(autoincrement())
  review   String @db.Text
  ratings  Int
  user_Id  Int    @unique
  event_Id Int    @unique
  user     User   @relation(fields: [user_Id], references: [id])
  event    Events @relation(fields: [event_Id], references: [id])
}

model Events {
  id          Int           @unique @default(autoincrement())
  eventName   String        @unique
  date        String
  location    String
  description String        @db.Text
  image       String?
  eOId        Int
  category    Cetegory
  Transaction Transaction[]
  Review      Review[]
  Promotion   Promotion[]
  Ticketing   Ticketing[]
  eo          EO            @relation(fields: [eOId], references: [id])
}

model Ticketing {
  id         Int    @unique @default(autoincrement())
  nameTicket String
  quota      Int
  price      Float? @default(0)
  startDate  DateTime?
  endDate    DateTime?
  eventsId   Int
  event      Events @relation(fields: [eventsId], references: [id])
}

model Transaction {
  id            Int      @unique @default(autoincrement())
  event_Id      Int      @unique
  user_Id       Int      @unique
  qty           Int      @default(1)
  totalPrice    Float
  totalDiscount Int
  finalPrice    Float
  status        Status
  proof         String
  created_at    DateTime @default(now())
  user          User     @relation(fields: [user_Id], references: [id])
  event         Events   @relation(fields: [event_Id], references: [id])
}

model Promotion {
  id          Int      @unique @default(autoincrement())
  startDate   DateTime
  endDate     DateTime
  voucherCode String
  quota       Int?
  percentage  Int?
  event_Id    Int      @unique
  event       Events   @relation(fields: [event_Id], references: [id])
}
